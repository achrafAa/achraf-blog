---
import Layout from '../layouts/Layout.astro';

const contactMethods = [
  {
    name: 'LinkedIn',
    handle: '@achrafaamri',
    description: 'Professional networking and career opportunities. Great for discussing projects, collaborations, and insights.',
    link: 'https://linkedin.com/in/achrafaamri',
    icon: 'linkedin',
    primary: true
  },
  {
    name: 'GitHub',
    handle: '@achrafAa',
    description: 'Technical discussions, code reviews, and open-source collaborations. Perfect for diving into code and technical details.',
    link: 'https://github.com/achrafAa',
    icon: 'github',
    primary: true
  },
  {
    name: 'X (Twitter)',
    handle: '@aamri_achraf',
    description: 'Follow for tech updates and quick thoughts',
    link: 'https://x.com/aamri_achraf',
    icon: 'twitter',
    primary: false
  }
];

const expectations = [
  {
    title: 'Quick Response',
    description: 'I typically respond within 24-48 hours, depending on the complexity of your message.',
    icon: 'clock'
  },
  {
    title: 'Meaningful Conversations',
    description: 'I prefer in-depth discussions about technology, projects, and opportunities rather than quick exchanges.',
    icon: 'chat'
  },
  {
    title: 'Collaborative Approach',
    description: 'I believe in building lasting professional relationships and working together on interesting challenges.',
    icon: 'team'
  }
];
---

<Layout title="Contact - Get in Touch | Achraf AAMRI">
  <!-- Hero Section -->
  <section class="py-20 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-blue-50/50 to-white dark:from-gray-900 dark:to-gray-900">
    <div class="max-w-6xl mx-auto text-center space-y-8">
      <div class="space-y-4">
        <h1 class="text-4xl md:text-6xl font-bold tracking-tight text-gray-900 dark:text-white">
          Let's <span class="text-blue-600 dark:text-blue-400">Connect</span>
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto leading-relaxed">
          I prefer connecting through LinkedIn or GitHub where we can have meaningful conversations 
          about technology, projects, and opportunities. Let's build something amazing together.
        </p>
        <div class="inline-flex items-center px-4 py-2 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-300 rounded-full text-sm font-medium">
          <div class="w-2 h-2 bg-green-500 rounded-full mr-2 animate-pulse"></div>
          Available for collaborations
        </div>
      </div>
    </div>
  </section>

  <!-- Separator -->
  <div class="w-full h-px bg-gray-200 dark:bg-gray-700"></div>

  <!-- Primary Contact Methods -->
  <section class="py-20 bg-gray-50/50 dark:bg-gray-800/30">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 space-y-16">
      <div class="text-center space-y-4">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white">How to Reach Me</h2>
        <p class="text-xl text-gray-600 dark:text-gray-300">
          Choose your preferred platform to start a conversation.
        </p>
      </div>

      <!-- Primary Contact Cards -->
      <div class="grid gap-8 md:grid-cols-2">
        {contactMethods.filter(method => method.primary).map((method) => (
          <div class="group bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-8 hover:shadow-lg transition-all duration-200 hover:-translate-y-1">
            <div class="flex items-start space-x-6">
              <div class={`flex-shrink-0 w-16 h-16 rounded-lg flex items-center justify-center transition-colors ${
                method.icon === 'linkedin' ? 'bg-blue-100 dark:bg-blue-900/20 group-hover:bg-blue-200 dark:group-hover:bg-blue-900/30' :
                method.icon === 'github' ? 'bg-gray-100 dark:bg-gray-700 group-hover:bg-gray-200 dark:group-hover:bg-gray-600' :
                'bg-gray-100 dark:bg-gray-700'
              }`}>
                {method.icon === 'linkedin' && (
                  <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                )}
                {method.icon === 'github' && (
                  <svg class="w-8 h-8 text-gray-700 dark:text-gray-300" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                )}
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                  {method.name}
                </h3>
                <div class="inline-flex items-center px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-full text-sm font-medium mb-4">
                  {method.handle}
                </div>
                <p class="text-gray-600 dark:text-gray-300 mb-6 leading-relaxed">
                  {method.description}
                </p>
                <a 
                  href={method.link} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-all duration-200 group-hover:translate-x-1"
                >
                  Connect on {method.name}
                  <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- Contact Form Section -->
      <div class="max-w-lg mx-auto">
        <div class="text-center mb-8">
          <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">Or send me a message</h3>
          <p class="text-gray-600 dark:text-gray-300">I'll get back to you within 24-48 hours</p>
        </div>
        
        <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 shadow-lg p-8">
          <form action="https://formspree.io/f/xqaberzq" method="POST" class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="email" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                  Email Address
                </label>
                <input 
                  type="email" 
                  name="email" 
                  id="email"
                  required
                  class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors"
                  placeholder="your@email.com"
                />
              </div>
              <div>
                <label for="subject" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                  Subject
                </label>
                <input 
                  type="text" 
                  name="subject" 
                  id="subject"
                  class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors"
                  placeholder="Project inquiry"
                />
              </div>
            </div>

            <div>
              <label for="message" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                Message
              </label>
              <textarea 
                name="message" 
                id="message"
                rows="5"
                required
                class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors resize-none"
                placeholder="Tell me about your project, idea, or question..."
              ></textarea>
            </div>

            <button 
              type="submit"
              class="w-full inline-flex items-center justify-center px-6 py-4 bg-blue-600 dark:bg-blue-500 text-white font-semibold rounded-xl hover:bg-blue-700 dark:hover:bg-blue-600 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
              </svg>
              Send Message
            </button>
          </form>
        </div>
      </div>

      <!-- Additional Platforms -->
      <div class="text-center mt-16">
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-6">Also find me on</h3>
        <div class="flex justify-center gap-4">
          {contactMethods.filter(method => !method.primary).map((method) => (
            <a 
              href={method.link} 
              target="_blank" 
              rel="noopener noreferrer"
              class="px-4 py-2 text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
            >
              {method.name}
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Separator -->
  <div class="w-full h-px bg-gray-200 dark:bg-gray-700"></div>

  <!-- What to Expect -->
  <section class="py-20 bg-white dark:bg-gray-900">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 space-y-16">
      <div class="text-center space-y-4">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white">What to Expect</h2>
        <p class="text-xl text-gray-600 dark:text-gray-300">
          Here's what you can expect when reaching out to me.
        </p>
      </div>

      <div class="grid gap-8 md:grid-cols-3">
        {expectations.map((expectation) => (
          <div class="bg-gray-50 dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-8 text-center hover:shadow-lg transition-all duration-200 hover:-translate-y-1">
            <div class="w-16 h-16 bg-blue-100 dark:bg-blue-900/20 rounded-lg flex items-center justify-center mx-auto mb-6">
              {expectation.icon === 'clock' && (
                <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              )}
              {expectation.icon === 'chat' && (
                <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                </svg>
              )}
              {expectation.icon === 'team' && (
                <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              )}
            </div>
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">{expectation.title}</h3>
            <p class="text-gray-600 dark:text-gray-300 leading-relaxed">{expectation.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>



  <!-- Call to Action -->
  <section class="py-20 bg-white dark:bg-gray-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center space-y-8">
      <div class="space-y-4">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white">Ready to Connect?</h2>
        <p class="text-xl text-gray-600 dark:text-gray-300">
          Whether you have a project idea, want to collaborate, or just want to chat about technology, 
          I'd love to hear from you.
        </p>
      </div>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="https://linkedin.com/in/achrafaamri" 
          target="_blank" 
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center px-8 py-3 bg-blue-600 dark:bg-blue-500 text-white font-medium rounded-lg hover:bg-blue-700 dark:hover:bg-blue-600 transition-colors duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
        >
          Connect on LinkedIn
        </a>
        <a 
          href="https://github.com/achrafAa" 
          target="_blank" 
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center px-8 py-3 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 font-medium rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors duration-200"
        >
          Follow on GitHub
        </a>
      </div>
    </div>
  </section>
</Layout> 